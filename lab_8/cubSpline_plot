plt.figure(figsize=(10, 6))
plt.plot(new_x, new_y, label="Кубічний сплайн", color="red", linestyle="--", linewidth=2) 
plt.plot(input_x, input_y, "o", markersize=8, label="Точки", color="blue") 
plt.xticks(np.arange(1, 4, 0.25))
plt.yticks(np.arange(0.5, 3, 0.25))
plt.xlabel("x") 
plt.ylabel("y")
plt.title("Графік кубічного сплайну") 
plt.legend(loc="lower right")
plt.grid(True)
plt.show()

x_plot = np.linspace(min(xi), max(xi), 500)
y_plot = [newton_interpolation_1(x, xi, yi) for x in x_plot]
plt.figure(figsize=(10, 6))
plt.plot(x_plot, y_plot, label='Графік функції', color='green')
plt.scatter(x_values_1, y_values_1, label='Знайдені точки (Перша інтерполяційна формула)', color='blue')
plt.scatter(x_values_2, y_values_2, label='Знайдені точки (Друга інтерполяційна формула)', color='red')
plt.xlabel('x')
plt.ylabel('y')
plt.legend()
plt.grid(True)
plt.title('Інтерполяція багаточленом Ньютона')
plt.show()
